<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.hp.autonomy.frontend.havensearch</groupId>
    <artifactId>integration-tests-parent</artifactId>
    <packaging>pom</packaging>
    <version>1.0.1-SNAPSHOT</version>

    <parent>
        <groupId>com.autonomy.frontend</groupId>
        <artifactId>master</artifactId>
        <version>1.0.1</version>
    </parent>

    <modules>
      <module>mockui</module>
      <module>integration-tests-common</module>
      <module>integration-tests-hosted</module>
    </modules>

    <!-- specify defaults -->
    <properties>
        <build.config.location>target/config/maven.json</build.config.location>
        <config.selenium.url>http://localhost:4444/wd/hub</config.selenium.url>
        <config.selenium.browser>chrome</config.selenium.browser>
        <config.app.env>preview</config.app.env>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <systemPropertyVariables>
                        <com.autonomy.baseConfig>${build.config.location}</com.autonomy.baseConfig>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/config</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../config</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>onprem</id>
            <activation>
                <property>
                    <name>com.autonomy.applicationType</name>
                    <value>On Premise</value>
                </property>
            </activation>
            <properties>
                <build.config.location>target/config/onprem.json</build.config.location>
                <!-- "testConfig" lists IDOL server setup for SettingsPageITCase -->
                <testConfig.location>config.json</testConfig.location>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.hp.autonomy.frontend.searchoptimizer</groupId>
                    <artifactId>mockui</artifactId>
                    <version>10.9.0-SNAPSHOT</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>hod-jenkins</id>
            <activation>
                <property>
                    <name>com.autonomy.hubUrl</name>
                    <value>http://16.46.34.8:4444/wd/hub</value>
                </property>
            </activation>
            <properties>
                <config.selenium.url>http://16.46.34.8:4444/wd/hub</config.selenium.url>
            </properties>
        </profile>
        <profile>
            <id>fenkins</id>
            <activation>
                <property>
                    <name>com.autonomy.hubUrl</name>
                    <value>http://10.2.112.233:4444/wd/hub</value>
                </property>
            </activation>
            <properties>
                <build.config.location>target/config/fenkins.json</build.config.location>
                <!-- "testConfig" lists IDOL server setup for SettingsPageITCase -->
                <testConfig.location>config.json</testConfig.location>
            </properties>
        </profile>

    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.hp.autonomy.frontend.havensearch</groupId>
            <artifactId>mockui</artifactId>
            <version>1.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.hp.autonomy.frontend.selenium</groupId>
            <artifactId>selenium-utils</artifactId>
            <version>1.0.1</version>
        </dependency>
        <dependency>
            <groupId>com.autonomy</groupId>
            <artifactId>NonAciNG</artifactId>
            <version>2.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>4.3.2</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit-dep</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>2.43.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.4</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.0.9</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.hp.autonomy.hod</groupId>
            <artifactId>java-hod-client</artifactId>
            <version>0.12.0</version>
        </dependency>
        <dependency>
            <groupId>com.hp.autonomy.hod</groupId>
            <artifactId>java-parametric-databases</artifactId>
            <version>0.2.0</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.2.1</version>
        </dependency>
    </dependencies>
</project>
